
SELECT *
FROM ISSUESLISTS;

SELECT *
FROM ISSUES;

SELECT *
FROM USERS;

#1

SELECT IL.NAME, I.DESCRIPTION
FROM ISSUESLISTS IL,
     ISSUES I
WHERE IL.ID = I.ISSUESLIST_ID;

#2
SELECT U.FIRSTNAME, U.LASTNAME, I.DESCRIPTION
FROM USERS U,
     ISSUES I
WHERE U.ID = I.USER_ID_ASSIGNEDTO;

# 3

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(*) AS ISSUES
FROM ISSUES I,
     USERS U
WHERE U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY U.FIRSTNAME
HAVING COUNT(*) > 0;